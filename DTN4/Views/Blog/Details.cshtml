@model DTN4.Models.TinTuc
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/tin-tuc/{Model.Alias}-{Model.PostId}.html";
    List<TinTuc> Baivietlienquan = ViewBag.BaiVietLienQuan;
}

<section class="blog-details-hero set-bg" data-setbg="~/image/news/@Model.Thumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2 style="color: black;">@Model.Title</h2>
                    <ul>
                        <li style="color: black;">@Model.Author</li>
                        <li style="color: black;">@Model.CreateDate</li>
                        <li style="color: black;">8 Comments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Khác</h4>
                        <ul>
                            <li><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                            <li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
                            <li><a href="/">Home</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>

                        </ul>
                    </div>

                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img src="~/image/news/@Model.Thumb" alt="@Model.Title">
                    <p>@Model.Scontenct</p>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span>Fashion</li>
                                    <li><span>Tags:</span>Fashion</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Bài viết liên quan</h2>
                    <br />
                    <div class="row">
                        @if (Baivietlienquan != null && Baivietlienquan.Count() > 0)
                        {
                            foreach (var item in Baivietlienquan)
                            {
                                string _url = $"/tin-tuc/{Model.Alias}-{Model.PostId}.html"; ;
                                <div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="blog__item">
                                        <div class="blog__item__pic">
                                            <img src="~/image/news/@item.Thumb" alt="@item.Title">
                                        </div>
                                        <div class="blog__item__text">
                                            <ul>
                                                <li><i class="fa fa-calendar-o"></i>@item.CreateDate</li>
                                                <li><i class="fa fa-comment-o"></i> 7</li>
                                            </ul>
                                            <h5><a href="#">@item.Title</a></h5>
                                            <p>@item.Scontenct</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
