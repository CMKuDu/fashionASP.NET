@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<DTN4.Models.TinTuc>
@{
    ViewData["Title"] = "Blog Index - " + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    <div class="hero__categories__all" style="background: black;">
                        <i class="fa fa-bars"></i>
                        <span>All departments</span>
                    </div>
                    <ul>
                        <li><a href="#">All items</a></li>
                            <li><a href="#">Tee</a></li>
                            <li><a href="#">Jacket</a></li>
                            <li><a href="#">Shirts</a></li>
                            <li><a href="#">Bottom</a></li>
                            <li><a href="#">Sweater</a></li>
                            <li><a href="#">Cap</a></li>
                            <li><a href="#">Accessories</a></li>
                            <li><a href="#">Hoodie</a></li>
                            <li><a href="#">Backpack</a></li>
                            <li><a href="#">Sale</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <div class="hero__search__categories">
                                All Categories
                                <span class="arrow_carrot-down"></span>
                            </div>
                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn" style="background: black;">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+65 11.188.888</h5>
                            <span>support 24/7 time</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2 style="color: black;">Tin nổi bật</h2>
                    <div class="breadcrumb__option">
                        <a style="color: black;" href="/">Home</a>
                        <span style="color: black;">Tin nổi bật</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img src="img/blog/blog-2.jpg" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i>@item.CreateDate.Value.ToShortDateString()</li>
                                    <li><i class="fa fa-comment-o"></i> 5</li>
                                </ul>
                                <h5><a href="@url">@item.Title</a>
                                    <img class="img-full" src="~/image/news/@item.Thumb" alt="@item.Title" >
                                    </h5>
                                <p>
                                    
                                </p>
                                <a href="@url" class="blog__btn">Xem thêm <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                }
            }
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="pagination">
                            <pager class="page-container" list="@Model" asp-area="" asp-controller="Blog" asp-action="Index" />
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

